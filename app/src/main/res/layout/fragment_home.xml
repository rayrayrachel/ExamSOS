<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner_fragment_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/login_welcome_msg_text_view"
            style="@style/FancyTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_title_home" />
        <TextView
            android:id="@+id/streak_header"
            style="@style/HeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_streak_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:scaleType="fitCenter">

                <ImageView
                    android:id="@+id/leaf_monday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/home_streak_icon_1"
                    app:srcCompat="@drawable/good_leaf" />

                <ImageView
                    android:id="@+id/leaf_tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/home_streak_icon_2"
                    app:srcCompat="@drawable/good_leaf" />

                <ImageView
                    android:id="@+id/leaf_wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/home_streak_icon_3"
                    app:srcCompat="@drawable/good_leaf" />

                <ImageView
                    android:id="@+id/leaf_thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/home_streak_icon_4"
                    app:srcCompat="@drawable/good_leaf" />

                <ImageView
                    android:id="@+id/leaf_friday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/home_streak_icon_5"
                    app:srcCompat="@drawable/good_leaf" />

                <ImageView
                    android:id="@+id/leaf_saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/home_streak_icon_6"
                    app:srcCompat="@drawable/good_leaf" />

                <ImageView
                    android:id="@+id/leaf_sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/home_streak_icon_7"
                    app:srcCompat="@drawable/good_leaf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_streak_label_monday"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/label_tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_streak_label_tuesday"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/label_wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_streak_label_wednesday"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/label_thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_streak_label_thursday"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/label_friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_streak_label_friday"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/label_saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_streak_label_saturday"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/label_sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_streak_label_sunday"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/announcement_header"
            style="@style/HeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/announcement_header" />

        <TextView
            android:id="@+id/quick_start_button_header"
            style="@style/HeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_start_button" />

        <Button
            android:id="@+id/quick_start_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="@style/CustomButtonStyle"
            android:text="@string/quick_start_button_label" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>