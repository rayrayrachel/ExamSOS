<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-->Fragment Container<-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/card_margin_vertical"
        android:background="@drawable/rounded_corner_fragment_background">

        <TextView
            android:id="@+id/fragment_title_home"
            style="@style/LargeNumberTextStyle"
            android:padding="@dimen/primary_padding"
            android:shadowColor="@color/medium_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_fragment_background_less_opaque"
            android:text="@string/fragment_title_home"
            app:drawableLeftCompat="@drawable/ic_home"
            app:drawableTint="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/header_margin_horizontal"
            android:layout_marginTop="@dimen/card_margin_vertical">

            <!-->Day Streak Container<-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/card_margin_vertical"
                app:cardElevation="@dimen/card_elevation"
                app:cardCornerRadius="@dimen/corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/streak_header"
                        style="@style/HeaderTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/day_streak_header" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/card_margin_vertical"
                        android:scaleType="fitCenter">

                        <ImageView
                            android:id="@+id/leaf_monday"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:contentDescription="@string/home_streak_icon_1"
                            app:srcCompat="@drawable/good_leaf" />

                        <ImageView
                            android:id="@+id/leaf_tuesday"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:contentDescription="@string/home_streak_icon_2"
                            app:srcCompat="@drawable/good_leaf" />

                        <ImageView
                            android:id="@+id/leaf_wednesday"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:contentDescription="@string/home_streak_icon_3"
                            app:srcCompat="@drawable/bad_leaf" />

                        <ImageView
                            android:id="@+id/leaf_thursday"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:contentDescription="@string/home_streak_icon_4"
                            app:srcCompat="@drawable/good_leaf" />

                        <ImageView
                            android:id="@+id/leaf_friday"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:contentDescription="@string/home_streak_icon_5"
                            app:srcCompat="@drawable/good_leaf" />

                        <ImageView
                            android:id="@+id/leaf_saturday"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:contentDescription="@string/home_streak_icon_6"
                            app:srcCompat="@drawable/good_leaf" />

                        <ImageView
                            android:id="@+id/leaf_sunday"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:contentDescription="@string/home_streak_icon_7"
                            app:srcCompat="@drawable/good_leaf" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/card_margin_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/label_monday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/home_streak_label_monday"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/label_tuesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/home_streak_label_tuesday"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/label_wednesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/home_streak_label_wednesday"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/label_thursday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/home_streak_label_thursday"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/label_friday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/home_streak_label_friday"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/label_saturday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/home_streak_label_saturday"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/label_sunday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/home_streak_label_sunday"
                            android:textAlignment="center" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-->Recent Announcement Container<-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/card_margin_vertical"
                app:cardElevation="@dimen/card_elevation"
                app:cardCornerRadius="@dimen/corner_radius">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/primary_padding"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/announcement_header"
                        style="@style/HeaderTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/announcement_header" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/announcement_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/medium_gray"
                        app:cardElevation="@dimen/card_elevation"
                        app:cardCornerRadius="@dimen/corner_radius"
                        android:layout_marginHorizontal="@dimen/card_margin_vertical"
                        android:layout_marginVertical="@dimen/card_margin_vertical"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingHorizontal="@dimen/primary_padding"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/notification_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/icon_margin_end"
                                android:contentDescription="@string/announcement_icon_description"
                                android:src="@drawable/ic_announcement" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/notification_header"
                                    style="@style/LargeNumberTextStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dummy_announcement_header" />

                                <TextView
                                    android:id="@+id/notification_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/primary_margin"
                                    android:text="@string/dummy_announcement_text" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-->Daily Quiz Container<-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/card_elevation"
                android:layout_marginVertical="@dimen/card_margin_vertical"
                app:cardCornerRadius="@dimen/corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/quick_start_button_header"
                        style="@style/HeaderTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/header_margin_horizontal"
                        android:text="@string/quick_start_button" />

                    <com.sanojpunchihewa.glowbutton.GlowButton
                        android:id="@+id/quick_start_button_id"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_margin="@dimen/primary_margin"
                        android:text="@string/quick_start_button_label"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:buttonColor="@color/dark_teal"
                        app:cornerRadius="50dp"
                        app:glowColor="@color/theme_secondary"
                        app:pressedGlowSize="25dp"
                        app:unpressedGlowSize="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
